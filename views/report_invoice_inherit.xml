<odoo>

    <template id="report_invoice_document_inherit" 
        inherit_id="account.report_invoice_document">
        <xpath expr="//div[@class='row']" 
            position="replace">
            <!-- Add your fields here -->
            <div class="row">
                <div name="invoice_address" 
                    class="col-xs-4">
                    <address t-field="o.partner_id" 
                        t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                    <div t-if="o.partner_id.vat" 
                        class="mt16">
                        <t t-esc="o.company_id.country_id.vat_label or 'TIN'"/>
:                        <span t-field="o.partner_id.vat"/>
                    </div>
                </div>
            </div>
        </xpath>


        <xpath expr="//table[@name='invoice_line_table']" 
            position="replace">
            <!-- Add your fields here -->
            <table class="table table-condensed" 
                name="invoice_line_table">
                <thead>
                    <tr>
                        <th>Partida</th>
                        <th>Description</th>
                        <th class="text-right">Quantity</th>
                        <th class="text-right">Unit Price</th>
                        <th t-if="display_discount" 
                            class="text-right">Disc.(%)</th>
                        <th class="text-right">Amount</th>
                    </tr>
                </thead>
                <tbody class="invoice_tbody">
                    <tr t-foreach="o.invoice_line_ids" 
                        t-as="l">
                        <td t-esc="l_index+1"></td>
                        <td>
                            <span t-field="l.name"/>
                        </td>

                        <td class="text-right">
                            <span t-field="l.quantity"/>
                            <span t-field="l.uom_id" 
                                groups="product.group_uom"/>
                        </td>
                        <td class="text-right">
                            <span t-field="l.price_unit"/>
                        </td>
                        <td t-if="display_discount" 
                            class="text-right">
                            <span t-field="l.discount"/>
                        </td>

                        <td class="text-right" 
                            id="subtotal">
                            <span t-field="l.price_subtotal" 
                                t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                        </td>
                    </tr>
                </tbody>
            </table>
        </xpath>
    </template>

</odoo>