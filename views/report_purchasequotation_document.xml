<odoo>

    <template id="report_purchasequotation_document_inherit" 
        inherit_id="purchase.report_purchasequotation_document">


        <xpath expr="//div[@class='row mt32 mb32']" 
            position="replace">
            <div class="row mt32 mb32">
                <div class="col-xs-6">
                    <div t-field="o.partner_id" 
                        t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                    <p t-if="o.partner_id.vat">
                        <t t-esc="o.company_id.country_id.vat_label or 'TIN'"/>
:                        <span t-field="o.partner_id.vat"/>
,
                    </p>
                </div>
                <div class="col-xs-5 col-xs-offset-1">
                    <strong>Dirección de Envío:</strong>
                    <div t-if="o.dest_address_id">
                        <div t-field="o.dest_address_id" 
                            t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                    </div>
                    <div t-if="not o.dest_address_id and o.picking_type_id.warehouse_id">
                        <span t-field="o.picking_type_id.warehouse_id.name"/>
                        <div t-field="o.picking_type_id.warehouse_id.partner_id" 
                            t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                    </div>
                </div>
            </div>
        </xpath>

        <xpath expr="//div[@class='row mt32 mb32']" 
            position="after">
            <div class="row">
                <div class="col-xs-3">
                    <strong>Nombre de Proyecto:</strong>
                    <p t-foreach="o.order_line.analytic_tag_ids" 
                        t-as="tag">
                        <span t-field="tag.name" />
                    </p>
                </div>
                <div class="col-xs-3">
                    <strong>Cuenta Analitica:</strong>
                    <p t-foreach="o.order_line.account_analytic_id" 
                        t-as="account">
                        <span t-field="account.name" />
                    </p>
                </div>
                <div class="col-xs-6">
                    <div t-if="o.date_order" 
                        class="col-xs-3">
                        <strong>Fecha de Orden:</strong>
                        <p t-field="o.date_order" 
                            t-field-options='{"format": "dd/MMM/yyyy"}'/>
                    </div>
                </div>

            </div>
        </xpath>


        <xpath expr="//table[@class='table table-condensed']" 
            position="replace">

            <table class="table table-condensed" 
                name="purchase_quotation_lines">
                <thead>
                    <tr>
                        <th>Partida</th>
                        <th>Cantidad.</th>
                        <th>Unidad</th>
                        <th>No. Articulo</th>
                        <th>Descripción</th>
                        <th>Fecha Entrega</th>
                        <th>Etiqueta Analitica</th>
                        <th class="text-right">Precio Unitario</th>
                        <th class="text-right">Monto</th>
                    </tr>
                </thead>
                <tbody class="invoice_tbody">
                    <tr t-foreach="o.order_line" 
                        t-as="l">
                        <td t-esc="l_index+1"></td>
                        <td>
                            <span t-field="l.product_qty"/>

                        </td>
                        <td class="text-right">
                            <span t-field="l.product_id.uom_id" 
                                groups="product.group_uom"/>
                        </td>
                        <td>
                            <span t-field="l.product_id.default_code" />
                        </td>
                        <td style="width: 30em;">
                            <span t-field="l.name"/>
                        </td>
                        <td>
                            <span t-field="l.date_planned"/>
                        </td>
                        <td>
                            <t t-foreach="l.analytic_tag_ids" 
                                t-as="tag">
                                <span t-field="tag.name" />
,
                            </t>
                        </td>
                        <td class="text-right">
                            <span t-field="l.price_unit"/>
                        </td>

                        <td class="text-right" 
                            id="subtotal">
                            <span t-field="l.price_subtotal" 
                                t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                        </td>
                    </tr>
                </tbody>
            </table>
        </xpath>

        <xpath expr="//table[@class='table table-condensed']" 
            position="after">
            <div class="row total">
                <div class="col-xs-8 text-center">
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <span>SELLO DE ALMACEN Y FIRMA</span>
                </div>
                <div class="col-xs-4">
                    <table class="table table-condensed">
                        <tr class="border-black">
                            <td>
                                <strong>Subtotal</strong>
                            </td>
                            <td class="text-right">
                                <span t-field="o.amount_untaxed" 
                                    t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                            </td>
                        </tr>
                        <tr>
                            <td>Impuestos</td>
                            <td class="text-right">
                                <span t-field="o.amount_tax" 
                                    t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <strong>Total</strong>
                            </td>
                            <td class="text-right">
                                <span t-field="o.amount_total" 
                                    t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                            </td>
                        </tr>
                        <tr class="border-black">
                            <td>
                                <strong>Moneda</strong>
                            </td>
                            <td class="text-right">
                                <span t-field="o.currency_id.name"/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </xpath>

        <xpath expr="//div[@class='row total']" 
            position="after">
            <div>
                <div class="col-xs-4">
                    <div class="text-center">
                        <strong >SOLICITADO</strong>
                    </div>

                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <div class="text-center">
                    ______________________________
                    </div>

                    <br/>
                    <div class="text-center">
                        <strong class="text-center">
                            <span t-field="o.create_uid.name" />
                        </strong>
                    </div>
                </div>
                <div class="col-xs-4">
                    <div class="text-center">
                        <strong>AUTORIZADO</strong>
                    </div>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <div class="text-center">
                    ______________________________
                    </div>
                    <br/>
                    <strong>
                        <span></span>
                    </strong>
                </div>
                <div class="col-xs-">
                </div>
            </div>
        </xpath>
    </template>

</odoo>